CREATE TABLE leads (
	id VARCHAR(60) NOT NULL,
	first_name VARCHAR(100),
	last_name VARCHAR(100),
	email VARCHAR(100),
	phone VARCHAR(30),
	notes TEXT,
	website_url VARCHAR(100),
	facebook_handle VARCHAR(100),
	instagram_handle VARCHAR(100),
	twitter_handle VARCHAR(100),
	youtube_handle VARCHAR(100),
	tracked BOOLEAN NOT NULL DEFAULT FALSE,
	status VARCHAR(100) NOT NULL,
	created_at TIMESTAMP NOT NULL DEFAULT now(),
	updated_at TIMESTAMP NOT NULL DEFAULT now(),
	record_version INTEGER NOT NULL DEFAULT 0,
	
	PRIMARY KEY (id)
);

CREATE TABLE campaigns (
	id VARCHAR(60) NOT NULL,
	lead_id VARCHAR(60) NOT NULL,
	notes TEXT,
	start_date TIMESTAMP,
	end_date   TIMESTAMP,
	status VARCHAR(100) NOT NULL,
	created_at TIMESTAMP NOT NULL DEFAULT now(),
	updated_at TIMESTAMP NOT NULL DEFAULT now(),
	record_version INTEGER NOT NULL DEFAULT 0,
	
	PRIMARY KEY (id),
	FOREIGN KEY (lead_id) REFERENCES leads(id)
);

CREATE TABLE lead_status_updates(
	lead_id VARCHAR(60) NOT NULL,
	old_status VARCHAR(100) NOT NULL,
	new_status VARCHAR(100) NOT_NULL,
	date TIMESTAMP NOT NULL DEFAULT now(),
	
	FOREIGN KEY (lead_id) REFERENCES leads (id)
);

CREATE TABLE campaign_status_updates(
	campaign_id VARCHAR(60) NOT NULL,
	old_status VARCHAR(100) NOT NULL,
	new_status VARCHAR(100) NOT_NULL,
	date TIMESTAMP NOT NULL DEFAULT now(),
	
	FOREIGN KEY (campaign_id) REFERENCES campaigns (id)
);

CREATE TABLE scraped_candidates(
	lead_id VARCHAR(60) NOT NULL,
	type VARCHAR(60) NOT NULL,
	value VARCHAR(100) NOT NULL,
	
	FOREIGN KEY (lead_id) REFERENCES leads (id)
);









